{
    "version": 8,
    "configurePresets": [
        {
            "name": "def",
            "displayName": "GCC 13.3.0 x86_64-linux-gnu",
            "description": "Using compilers: C = /usr/bin/gcc-13, CXX = /usr/bin/g++-13",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc-13",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++-13",
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_WORKER_REAL": "ON",
                "BUILD_POSTPROCESSOR_REAL": "ON"
            }
        },
        {
            "name": "defWin-MSVC",
            "displayName": "MSVC + System OpenCV",
            "description": "Build with Visual Studio compiler",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build_msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_WORKER_REAL": "ON",
                "BUILD_POSTPROCESSOR_REAL": "ON",
                "OpenCV_DIR": "${sourceDir}/ext/opencv/build"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "def",
            "description": "",
            "displayName": "",
            "configurePreset": "def",
            "jobs": 15
        },
        {
            "name": "defWin",
            "description": "",
            "displayName": "",
            "configurePreset": "defWin",
            "jobs": 15
        }
    ]
}